{
  "resourceType": "TestScript",
  "id": "83e8e271-ced4-4ca7-ad4b-256ca00ed07f",
  "meta": {
    "profile": [
      "http://touchstone.aegis.net/touchstone/fhir/testing/StructureDefinition/testscript"
    ]
  },
  "url": "http://build.fhir.org/ig/hl7dk/dk-medcom/",
